<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.rotatableslider.RotatableSlider
        android:background="@color/colorAccent"
        android:id="@+id/brightness_slider_view"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        app:rs_thumb_color="@color/colorPrimary"
        app:rs_thumb_radius="10dp"
        app:rs_track_bg_color="#DFDFDF"
        app:rs_track_bg_thickness="3dp"
        app:rs_track_fg_color="@color/colorPrimaryDark"
        app:rs_track_fg_thickness="3dp"
        app:rs_track_horizontal="true"/>

</RelativeLayout>